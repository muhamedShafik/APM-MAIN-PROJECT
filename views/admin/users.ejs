  <script>
    const menu = document.querySelector('.tb-user-menu');
    const caret = document.querySelector('.tb-user-caret');

    caret.addEventListener('click', (e) => {
      e.stopPropagation();
      menu.classList.toggle('tb-user-menu--open');
    });

    document.addEventListener('click', () => {
      menu.classList.remove('tb-user-menu--open');
    });
    document.querySelector(".tb-btn-danger").addEventListener("click", () => {
      document.getElementById("addUserModal").classList.remove("hidden");
    });

    // CLOSE MODAL
    document.addEventListener("DOMContentLoaded", () => {

      document.querySelector(".tb-btn-danger").addEventListener("click", () => {
        document.getElementById("addUserModal").classList.remove("hidden");
      });

      document.querySelector(".tb-modal-close").addEventListener("click", () => {
        document.getElementById("addUserModal").classList.add("hidden");
      });

      document.getElementById("addUserModal").addEventListener("click", (e) => {
        if (e.target.id === "addUserModal") {
          e.target.classList.add("hidden");
        }
      });

    });
    
    // sweet alert

   
document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("addUserModal");
  const form = modal.querySelector("form");
  const phoneInput = document.getElementById("phoneInput");

  // Allow only digits while typing
  phoneInput.addEventListener("input", () => {
    phoneInput.value = phoneInput.value.replace(/\D/g, "");
  });

  form.addEventListener("submit", (e) => {
    const phone = phoneInput.value.trim();

    if (!/^\d{10}$/.test(phone)) {
      e.preventDefault();

      Toast.fire({
        icon: "error",
        title: "Phone number must be exactly 10 digits"
      });

      phoneInput.focus();
      return false;
    }
  });
});



const Toast = Swal.mixin({
  toast: true,
  position: "bottom-end",
  showConfirmButton: false,
  timer: 2600,
  timerProgressBar: true,
  background: "#020617",     // solid dark
  color: "#e5e7eb",
  iconColor: "#22c55e",      // green
  customClass: {
    popup: "tb-toast"
  },
  didOpen: (toast) => {
    toast.onmouseenter = Swal.stopTimer;
    toast.onmouseleave = Swal.resumeTimer;
  }
});

const params = new URLSearchParams(window.location.search);

if (params.get("success")) {
  Toast.fire({
    icon: "success",
    title: params.get("success")
  });
}

if (params.get("error")) {
  Toast.fire({
    icon: "error",
    title: params.get("error")
  });
}

// remove params after showing
if (params.get("success") || params.get("error")) {
  const url = new URL(window.location);
  url.searchParams.delete("success");
  url.searchParams.delete("error");
  window.history.replaceState({}, document.title, url.pathname);
}



    if (params.get("error")) {
      showAlert("error", "Error", params.get("error"));
    }

    if (params.get("success")) {
      showAlert("success", "Success", params.get("success"));
    }


