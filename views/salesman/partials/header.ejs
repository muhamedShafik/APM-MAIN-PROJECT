  font-size: 13px;
  text-decoration: none;
  background: #020617;
  color: #e5e7eb;
  border: 1px solid #1f2937;
}

.tb-page-btn:hover {
  background: #111827;
}

.tb-page-btn--primary {
  background: #111827;
  border-color: #374151;
}

.tb-page-btn--disabled {
  opacity: 0.4;
  cursor: not-allowed;
  pointer-events: none;
}


.tb-dropdown-item {
  padding: 10px 12px;
  font-size: 13px;
  color: #e5e7eb;
  cursor: pointer;
}

.tb-dropdown-item:hover {
  background: #111827;
}
/* search css */
.tb-dropdown-list {
  position: absolute;
  background: #020617;
