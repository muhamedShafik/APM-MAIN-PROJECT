<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>APM - Verify OTP</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- AOS Animation Library -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <style>
    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --secondary: #8b5cf6;
      --accent: #22c55e;
      --error-red: #ef4444;
      --dark-bg: #020617;
      --dark-card: rgba(15, 23, 42, 0.7);
      --text-light: #e5e7eb;
      --text-gray: #9ca3af;
      --glow-primary: rgba(99, 102, 241, 0.6);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--dark-bg);
      color: var(--text-light);
      min-height: 100vh;
      overflow-x: hidden;
      position: relative;
    }

    /* Landing Page Gradient Background Animation */
    .gradient-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(-45deg, #6366f1, #8b5cf6, #06b6d4, #22c55e);
      background-size: 400% 400%;
      animation: gradientShift 15s ease infinite;
      z-index: -2;
      opacity: 0.1;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Lightning Animation */
    .lightning-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
    }

    .lightning {
      position: absolute;
      width: 2px;
      height: 2px;
      background: var(--primary);
      box-shadow: 0 0 10px var(--primary);
      animation: lightningStrike 3s infinite;
    }

    @keyframes lightningStrike {
      0%, 90%, 100% { opacity: 0; transform: translateY(0) scale(1); }
      10% { opacity: 1; transform: translateY(-200vh) scale(1.5); }
      11% { opacity: 0; }
    }

    /* Floating Particles */
    .particles-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: -1;
    }

    .particle {
      position: absolute;
      border-radius: 50%;
      background: rgba(99, 102, 241, 0.2);
      animation: floatParticle linear infinite;
    }

    @keyframes floatParticle {
      0% {
        transform: translateY(0) rotate(0deg);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      100% {
        transform: translateY(-1000px) rotate(720deg);
        opacity: 0;
      }
    }

    /* OTP Page Container */
    .otp-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      position: relative;
    }

    /* Glass Card */
    .glass-card {
      background: var(--dark-bg);
      border-radius: 24px;
      border: 1px solid rgba(51, 65, 85, 0.9);
      box-shadow: 
        0 25px 50px rgba(15, 23, 42, 0.95),
        0 0 0 1px rgba(59, 130, 246, 0.1);
      backdrop-filter: blur(10px);
      animation: cardFadeIn 0.8s ease-out, cardFloat 4s ease-in-out 0.8s infinite;
      text-align: center;
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 440px;
      padding: 2.5rem 2rem;
    }

    @keyframes cardFadeIn {
      from { opacity: 0; transform: translateY(20px) scale(0.95); }
      to { opacity: 1; transform: translateY(0) scale(1); }
    }

    @keyframes cardFloat {
      0%, 100% { transform: translateY(0) rotateX(0deg); }
      50% { transform: translateY(-8px) rotateX(1deg); }
    }

    .glass-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--primary), var(--secondary), transparent);
    }

    /* Logo */
    .logo {
      font-size: 3.5rem;
      margin-bottom: 0.5rem;
      animation: bounce 2s infinite;
      display: inline-block;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-10px); }
      60% { transform: translateY(-5px); }
    }

    .app-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--error-red);
      margin-bottom: 1.5rem;
      text-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
    }

    /* Title */
    .otp-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-light);
      margin-bottom: 0.5rem;
    }

    .otp-subtitle {
      font-size: 0.9375rem;
      color: var(--text-gray);
      margin-bottom: 2rem;
      line-height: 1.5;
    }

    /* OTP Inputs - COMPACT SIZE */
    .otp-inputs {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 1.5rem 0;
    }

    .otp-input {
      width: 45px;
      height: 55px;
      text-align: center;
      font-size: 1.25rem;
      font-weight: 600;
      border-radius: 10px;
      border: 1.5px solid rgba(148, 163, 184, 0.45);
      background: rgba(2, 6, 23, 0.9);
      color: var(--text-light);
      outline: none;
      transition: all 0.25s ease;
    }

    .otp-input:focus {
      border-color: var(--primary);
      box-shadow: 
        0 0 0 3px rgba(99, 102, 241, 0.2),
        0 6px 20px rgba(99, 102, 241, 0.25);
      transform: translateY(-2px);
      background: rgba(2, 6, 23, 0.98);
    }

    /* Button */
    .btn-primary {
      width: 100%;
      padding: 0.875rem 1.25rem;
      border-radius: 50px;
      border: none;
      background: linear-gradient(135deg, #0b1e3d 0%, #1e3a5f 100%);
      color: white;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      letter-spacing: 0.5px;
      box-shadow: 
        0 20px 40px rgba(11, 30, 61, 0.6),
        0 0 0 1px rgba(59, 130, 246, 0.3);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      margin: 1rem 0 0.75rem;
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      transition: left 0.5s;
    }

    .btn-primary:hover::before {
      left: 100%;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #112b55 0%, #1e40af 100%);
      transform: translateY(-3px);
      box-shadow: 
        0 25px 50px rgba(11, 30, 61, 0.8),
        0 0 0 1px rgba(59, 130, 246, 0.5);
    }

    /* Helper Text */
    .helper {
      margin-top: 1rem;
      font-size: 0.875rem;
      color: var(--text-gray);
      line-height: 1.5;
    }

    /* Links */
    .link {
      margin-top: 1.25rem;
      font-size: 0.9375rem;
      color: #3b82f6;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.2s ease;
      text-decoration: none;
      display: inline-block;
    }

    .link:hover {
      color: #60a5fa;
      text-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
    }

    /* Shake animation */
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-4px); }
      75% { transform: translateX(4px); }
    }

    .shake {
      animation: shake 0.5s ease-in-out;
    }

    /* Responsive */
    @media (max-width: 576px) {
      body {
        padding: 40px 20px;
      }
      
      .glass-card {
        padding: 2rem 1.5rem;
        margin: 2rem auto;
      }
      
      .otp-input {
        width: 40px;
        height: 50px;
        font-size: 1.1rem;
      }
      
      .otp-inputs {
        gap: 8px;
      }
    }

    @media (min-width: 768px) {
      body {
        padding: 80px 2rem;
      }
      
      .glass-card {
        width: 480px;
        padding: 3rem 2.75rem 2.75rem;
        box-shadow: 
          0 40px 80px rgba(15, 23, 42, 0.98),
          0 0 0 1px rgba(59, 130, 246, 0.2);
      }
      
      .otp-inputs {
        gap: 12px;
      }
    }

    @media (min-width: 1200px) {
      .glass-card {
        width: 520px;
        padding: 3.25rem 3rem 3rem;
      }
    }
  </style>
</head>
<body>
  <!-- Lightning Background -->
  <div class="lightning-bg" id="lightningBg"></div>
  
  <!-- Floating Particles -->
  <div class="particles-container" id="particles"></div>
  
  <!-- Gradient Background -->
  <div class="gradient-bg"></div>

  <!-- OTP Card -->
  <div class="otp-page">
    <div class="glass-card">
      

      <form id="otpForm" method="post" action="/auth/verify-otp">
        <p class="otp-subtitle">Enter the OTP sent to your number</p>

        <div class="otp-inputs">
          <input type="text" name="d1" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
          <input type="text" name="d2" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
          <input type="text" name="d3" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
          <input type="text" name="d4" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
          <input type="text" name="d5" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
          <input type="text" name="d6" maxlength="1" required autocomplete="one-time-code" class="otp-input" />
        </div>

        <button type="submit" class="btn-primary">Verify OTP</button>
        
        <p class="helper">OTP valid for 2 minutes</p>
        <a href="/auth/resend-otp" class="link">
          <i class="bi bi-arrow-clockwise me-1"></i>Resend OTP
        </a>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- AOS Animation Library -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  
  <script>
    // Initialize AOS
    AOS.init({
      duration: 1000,
      once: true
    });

    // Lightning effect - KEEPING YOUR ORIGINAL JS
    function createLightning() {
      const lightning = document.createElement('div');
      lightning.className = 'lightning';
      lightning.style.left = Math.random() * 100 + '%';
      lightning.style.animationDelay = Math.random() * 2 + 's';
      lightning.style.animationDuration = (Math.random() * 2 + 2) + 's';
      document.getElementById('lightningBg').appendChild(lightning);
      setTimeout(() => lightning.remove(), 5000);
    }

    setInterval(createLightning, 8000);
    createLightning();

    // Floating particles
    function createParticles() {
      const container = document.getElementById('particles');
      const particleCount = 20;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.classList.add('particle');
        
        const size = Math.random() * 6 + 2;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        
        particle.style.left = `${Math.random() * 100}vw`;
        particle.style.top = `${Math.random() * 100}vh`;
        
        const duration = Math.random() * 10 + 10;
        particle.style.animationDuration = `${duration}s`;
        
        const delay = Math.random() * 5;
        particle.style.animationDelay = `${delay}s`;
        
        container.appendChild(particle);
      }
    }

    // YOUR ORIGINAL OTP JS CODE - EXACTLY AS YOU HAD IT
    const inputs = document.querySelectorAll(".otp-input");
    const form = document.getElementById("otpForm");

    // Auto-focus first input
    if (inputs.length > 0) {
      inputs[0].focus();
    }

    // Handle input events
    inputs.forEach((input, index) => {
      input.addEventListener("input", () => {
        // Allow only digits
        input.value = input.value.replace(/\D/g, '');
        
        // Auto-focus next input
        if (input.value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
        
        // Limit to 1 character
        if (input.value.length > 1) {
          input.value = input.value.slice(0, 1);
        }
      });

      input.addEventListener("keydown", (e) => {
        // Handle backspace
        if (e.key === "Backspace" && input.value === "" && index > 0) {
          inputs[index - 1].focus();
        }
        
        // Submit on Enter
        if (e.key === "Enter") {
          form.submit();
        }
      });
    });

    // Form submission validation
    form.addEventListener("submit", (e) => {
      const otpValues = Array.from(inputs).map(input => input.value).join('');
      
      // Check if all 6 digits are entered
      if (otpValues.length !== 6) {
        e.preventDefault();
        
        // Add shake animation
        inputs.forEach(input => {
          input.classList.add('shake');
          setTimeout(() => input.classList.remove('shake'), 500);
        });
        
        // Show error message
        const Toast = Swal.mixin({
          toast: true,
          position: "bottom-end",
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          background: "#020617",
          color: "#e5e7eb",
          iconColor: "#ef4444"
        });
        
        Toast.fire({
          icon: "error",
          title: "Please enter all 6 digits of the OTP"
        });
        
        // Focus first empty input
        const firstEmpty = Array.from(inputs).find(input => !input.value);
        if (firstEmpty) {
          firstEmpty.focus();
        }
        
        return false;
      }
      
      // If all digits are entered, form will submit normally
      return true;
    });

    // URL parameter handling - YOUR ORIGINAL CODE
    const params = new URLSearchParams(window.location.search);
    
    const Toast = Swal.mixin({
      toast: true,
      position: "bottom-end",
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true,
      background: "#020617",
      color: "#e5e7eb",
      iconColor: "#ef4444"
    });

    if (params.get("error")) {
      Toast.fire({ 
        icon: "error", 
        title: params.get("error") 
      });
      history.replaceState({}, "", location.pathname);
    }
    
    if (params.get("success")) {
      Toast.fire({ 
        icon: "success", 
        title: params.get("success") 
      });
      history.replaceState({}, "", location.pathname);
    }

    // Timer functionality for resend
    let timeLeft = 120; // 2 minutes
    const timerElement = document.createElement('div');
    timerElement.className = 'helper';
    timerElement.style.marginTop = '0.5rem';
    timerElement.innerHTML = `Resend available in: <span id="countdown">02:00</span>`;
    
    const resendLink = document.querySelector('a[href="/auth/resend-otp"]');
    if (resendLink) {
      resendLink.parentNode.insertBefore(timerElement, resendLink.nextSibling);
      
      // Disable resend link initially
      resendLink.style.pointerEvents = 'none';
      resendLink.style.opacity = '0.5';
      
      // Start countdown
      const countdownInterval = setInterval(() => {
        timeLeft--;
        
        if (timeLeft <= 0) {
          clearInterval(countdownInterval);
          timerElement.style.display = 'none';
          resendLink.style.pointerEvents = 'auto';
          resendLink.style.opacity = '1';
          return;
        }
        
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        document.getElementById('countdown').textContent = 
          `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      }, 1000);
      
      // Handle resend click
      resendLink.addEventListener('click', function(e) {
        if (timeLeft > 0) {
          e.preventDefault();
          
          Toast.fire({
            icon: "info",
            title: `Please wait ${timeLeft} seconds before resending`
          });
        }
      });
    }

    // Initialize on load
    window.addEventListener('load', () => {
      createParticles();
      // Auto-focus first OTP input
      if (inputs.length > 0) {
        inputs[0].focus();
      }
    });

    // Auto-submit when all OTP digits are filled
    inputs[inputs.length - 1].addEventListener('input', function() {
      const allFilled = Array.from(inputs).every(input => input.value.length === 1);
      if (allFilled) {
        // Small delay for better UX
        setTimeout(() => {
          form.dispatchEvent(new Event('submit'));
        }, 300);
      }
    });
  </script>
</body>
</html>