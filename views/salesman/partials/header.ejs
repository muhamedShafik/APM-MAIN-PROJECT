}


/* ALERT STYLE */
.tb-swal-popup {
  border-radius: 12px;
  font-size: 14px;
}

.tb-swal-title {
  font-size: 15px;
  font-weight: 500;
}


/* ===== TABS CONTAINER ===== */
.tb-tabs {
  border-bottom: 1px solid #1f2937;
  gap: 8px;
}

/* ===== TAB BUTTON ===== */
.tb-tab {
  background: transparent;
  border: none;
  padding: 6px 14px;
  font-size: 13px;
  color: #9ca3af;
  border-radius: 8px 8px 0 0;
